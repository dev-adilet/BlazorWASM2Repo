@page "/timetable"

<h3>Timetable</h3>

<table id="myTimetable" class="table timetable-table">
    <thead>
        <tr>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Task</th>
            <th class="actions-col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < timetable.Count; i++)
        {
            var entry = timetable[i];
            string rowClass = "timetable-row";
            if (i % 2 == 0)
            {
                rowClass += " odd";
            }
            if (entry.IsSelected)
            {
                rowClass += " selected";
            }

            if (!entry.IsEditing)
            {
                <tr class="@rowClass" @onclick="@(() => ToggleSelection(entry))">
                    <td>@entry.StartTime</td>
                    <td>@entry.EndTime</td>
                    <td>@entry.Task</td>
                    <td class="actions-col">
                        <button class="btn btn-primary"
                                @onclick:stopPropagation="true"
                                @onclick="() => Edit(entry)">
                            Edit
                        </button>
                        <button class="btn btn-info ms-1"
                                @onclick:stopPropagation="true"
                                @onclick="() => SplitRow(entry)">
                            Split
                        </button>
                    </td>
                </tr>
            }
            else
            {
                <tr class="@rowClass">
                    <td>
                        @if (i == 0)
                        {
                            <input type="text" class="form-control" @bind="entry.StartTime" />
                        }
                        else
                        {
                            <input type="text" class="form-control" value="@entry.StartTime" disabled />
                        }
                    </td>
                    <td>
                        <input type="text" class="form-control" @bind="entry.EndTime" />
                    </td>
                    <td>
                        <input type="text" class="form-control" @bind="entry.Task" />
                    </td>
                    <td class="actions-col">
                        <button class="btn btn-success me-1"
                                @onclick:stopPropagation="true"
                                @onclick="() => Save(entry)">
                            Save
                        </button>
                        <button class="btn btn-secondary"
                                @onclick:stopPropagation="true"
                                @onclick="() => Cancel(entry)">
                            Cancel
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-3">
    <button class="btn btn-success me-2" @onclick="AddNewRow">Add New Row</button>
    <button class="btn btn-warning" @onclick="MergeSelectedRows">Merge Selected</button>
    <button class="btn btn-info" @onclick="ExportTimetableAsync">Export Timetable</button>
    <InputFile OnChange="HandleFileSelected" accept=".json" />
    <button @onclick="PrintAsPDF">Print to PDF</button>
</div>
