@* MergeModal.razor *@
<div class="merge-modal" style="display:@(Visible ? "block" : "none")">
    <div class="modal-backdrop">
        <div class="modal-container">
            <h4>Merge Rows</h4>
            <p>Please enter a task name:</p>
            <input type="text" class="form-control mb-2" @bind="TaskName" />
            @if (!string.IsNullOrWhiteSpace(Error))
            {
                <div class="text-danger">@Error</div>
            }
            <div class="mt-2">
                <button class="btn btn-primary me-2" @onclick="OnConfirm">Confirm</button>
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
