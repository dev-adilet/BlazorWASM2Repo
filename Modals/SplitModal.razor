@using Microsoft.AspNetCore.Components.Forms

<div class="split-modal" style="display:@(Visible ? "block" : "none")">
    <div class="modal-backdrop">
        <div class="modal-container">
            <h4>Split Row</h4>
            <p>Enter split time between @LowerBound and @UpperBound</p>
            <InputText type="time" class="form-control mb-2" @bind-Value="SplitTime" />
            @if (!string.IsNullOrWhiteSpace(Error))
            {
                <div class="text-danger">@Error</div>
            }
            <div class="mt-2">
                <button class="btn btn-primary me-2" @onclick="OnConfirm">Confirm</button>
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
